<?xml version="1.0" encoding="utf-8"?>
<ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:gravity="center"
    android:id="@+id/viewFlipper"
    android:orientation="vertical"
    android:padding="10dp">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardViewFront"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="8dp"
        >
<!--        <ImageView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_gravity="end"-->
<!--            android:layout_marginTop="8dp"-->
<!--            android:layout_marginEnd="8dp"-->
<!--            android:src="@drawable/baseline_volume_up_48" />-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">



            <TextView
                android:id="@+id/englishWord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="convoluted"
                android:textAlignment="center"
                android:fontFamily="@font/inter_semibold"
                android:textSize="40sp"
                tools:layout_conversion_absoluteHeight="0dp"
                tools:layout_conversion_absoluteWidth="411dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="731dp" />

            <TextView
                android:id="@+id/txt_wordform"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/inter"

                android:text="adjective"
                android:textSize="16dp"
                android:textStyle="italic" />



        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardViewBack"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/coffee"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">




            <TextView
                android:id="@+id/txt_definition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="@color/white"

                android:text="complex, complicated, or twisted in an intricate manner" />





        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</ViewFlipper>